<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.AcademiApp" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:fontFamily">@font/sofia_regular</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="checkBoxStyle" parent="Theme.AcademiApp">
        <item name="colorAccent">@color/purple_500</item>
        <item name="android:textColorSecondary">@color/purple_500</item>
    </style>



    <style name="DialogTheme" parent="ThemeOverlay.AppCompat.Dialog">
        <item name="colorPrimary">@color/main</item>
        <item name="colorAccent">@color/main</item>                   <!--header background-->
        <item name="android:windowBackground">@color/white</item>     <!--calendar background-->
        <item name="android:colorControlActivated">@color/main</item> <!--selected day-->
        <item name="android:textColorPrimary">@color/black</item> <!--days of the month-->
        <item name="android:textColorSecondary">@color/main</item>    <!--days of the week-->
    </style>
</resources>